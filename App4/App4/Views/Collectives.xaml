<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App4.Views.Collectives">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout BackgroundColor="White">
            <StackLayout Orientation="Horizontal" HeightRequest="70">
                <Image Source="mlogo.png" WidthRequest="70" HorizontalOptions="Start" Margin="-5"/>
                <Entry x:Name="Search" Text="{Binding Search}" Placeholder="Search"
                           PlaceholderColor="#3B3B3C" HeightRequest="50" WidthRequest="240"
                           TextColor="#3B3B3C" HorizontalOptions="Center" />
                    <Image Source="hamburgermenu.png" HorizontalOptions="CenterAndExpand" WidthRequest="40">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer
                            Tapped="OnHamburgerMenuGestureTap"
                            NumberOfTapsRequired="1"/>
                        </Image.GestureRecognizers>
                    </Image>
                </StackLayout>
            <StackLayout Orientation="Vertical" Padding="10">
                    <Label Text="collectives." FontSize="25" HorizontalTextAlignment="Center" TextColor="#3B3B3C" Margin="5"/>

                <?label for the explanation of collectives?>
                    <Label Text="what are collectives" FontSize="20" HorizontalTextAlignment="Center" TextColor="#3B3B3C" Margin="5"/>

                    <Label Text="Collectives are short, topic-based gatherings. Your Collective will typically meet once a week for six to eight weeks to work through a small-but-mighty participant guide that focuses on growth and discovery within a single topic. MOPS Members can download the Participant Guide for free, but we recommend each group purchases the Facilitator Guide, which offers keen insight into creating a safe and loving space. Gather a few friends and explore our Collectives, and check back soon for more!" FontSize="15" HorizontalTextAlignment="Center" TextColor="#3B3B3C" Margin="5"/>

                    <Label Text="your collectives" FontSize="20" HorizontalTextAlignment="Center" TextColor="#3B3B3C" Margin="5"/>
                
                

            </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>